# Use an OpenJDK base image
FROM openjdk:11-jre-slim

# Set the working directory
WORKDIR /app

# Copy the jar file generated by Maven from the target directory
COPY target/product-catalog-service-1.0-SNAPSHOT.jar /app/product-catalog-service.jar

# Expose the port on which the service runs
EXPOSE 8081

# Command to run the application
CMD ["java", "-jar", "/app/product-catalog-service.jar"]
